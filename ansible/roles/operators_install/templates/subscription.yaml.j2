apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: "{{ operator }}"
{% if install_mode == 'AllNamespaces' %}
  namespace: openshift-operators
{% else %}
  namespace: "{{ ns }}"
{% endif %}
spec:
  channel: "{{ channel }}"
  installPlanApproval: Automatic
  name: "{{ operator }}"
  source: "{{ operatorhub.operator_source }}"
  sourceNamespace: openshift-marketplace
